@model IEnumerable<Comments>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class='box-comment'>
            <!-- User image -->
            @if (item.Post.Picture != null)
            {
                var base64 = Convert.ToBase64String(item.Post.Picture);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                <img class="img-responsive img-circle img-sm" src="../../dist/img/user1-128x128.jpg" alt="Photo">
            }
            else
            {
                <img class="img-circle img-bordered-sm" src="../../dist/img/user1-128x128.jpg" alt="user image">
            }
            <div class='comment-text'>
                <span class="username">

                    <span class='text-muted pull-right'></span>
                </span><!-- /.username -->
                @item.Comment
            </div><!-- /.comment-text -->
        </div>
    }
}
else
{
    <p>No Comment</p>
}
